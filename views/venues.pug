extends layout


block content
  
  #venues-page.main.container
    
      //- .row
      //-     .col-md-8.col-md-offset-2
      
      h1 #{title}
      p #{message}
      
      br
      h5 
        a(href="/newvenue") + Register a new venue
      br
      
      .row
        each venue in venues
          - const address = venue.venueAddress.venueStreetAddress +", "+venue.venueAddress.venueSuburb+", "+venue.venueAddress.venuePostcode;
          - const imgURL = "https://studyspot.s3.amazonaws.com/venue/header/" + venue._id.toString() + ".1.jpg"
          .col-lg-6
            .card.mb-3.d-flex.align-items-stretch
              .row.no-gutters
                .col-4
                  //- img(src=imgURL alt="Venue thumbnail not loading").card-img
                .col-8
                  .card-body
                    h5.card-title #[a(href="/venue/" + venue._id) #{venue.venueName}]
                    hr
                    p.card-text(style='white-space:pre;')
                      |#{venue.venueType} 
                      |#{address}
                
