nav.navbar.navbar-expand-lg.navbar-light.bg-light
    a.navbar-brand(href="/")
        img.rounded(src="/images/logo.png", width="210px")
    button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarToggler")
        span.navbar-toggler-icon
    #navbarToggler.collapse.navbar-collapse

        ul.navbar-nav.ml-auto
            li.nav-item
                a.nav-item.nav-link(href="/venue") Venues
            li.nav-item
                a.nav-item.nav-link(href="/user") Users
            if !currentUser
                a.nav-item.nav-link(href="/register") Sign Up

        if currentUser
            a.nav-item.nav-link(href="/profile") My Profile
            div
                img.avatar.img-circle.hidden-xs-down(src="/images/avatar.png", alt="avatar")
                a.btn.btn-outline-dark.pull-md-right(href="/logout", style="margin:10px") Log out
        else
            a.btn.btn-info(href="/login", style="margin:0 10px") Login


