extends layout

block content
    .main.container.clearfix
      .row
        // Sidebar left
        div.col-md-3.pr-md-4.side-bar-left
          // Sidebar menu
          ul.list-unstyled.sidebar-menu.pl-md-2.pr-md-0
            li
              a.sidebar-item.d-flex.justify-content-between.align-items-center(href='/dashboard')
                | Dashboard
                span.fas.fa-tachometer-alt
            li
              a.sidebar-item.d-flex.justify-content-between.align-items-center(href='/bookmarks')
                | Bookmarks
                span.fas.fa-heart
            li
              a.sidebar-item.d-flex.justify-content-between.align-items-center(href='/recently-viewed')
                | Recently Viewed
                span.fas.fa-clock
            li
              a.sidebar-item.d-flex.justify-content-between.align-items-center(href='/reviews')
                | Reviews
                span.fas.fa-comment
            li
              a.sidebar-item.d-flex.justify-content-between.align-items-center(href='/photos')
                | Photos
                span.fas.fa-photo-video
            li
              a.sidebar-item.d-flex.justify-content-between.align-items-center(href='/friends')
                | Friends
                span.fas.fa-user
            li
              a.sidebar-item.d-flex.justify-content-between.align-items-center(href='/sspoints')
                | SS Points
                span.fas.fa-dollar-sign


        // Content
        div.col-md-9.dashboard-area
          .row
            user-profile.col-12.mb-3
              img.profile-background(src="https://66.media.tumblr.com/4e8b11edec6685c16b8967f38c327e12/tumblr_n6v9k5Dfuu1qakm7uo1_500.jpg")
              .row
                .col-12
                  a(href="/profile/edit")
                  button.position-absolute.ml-3.mt-3.btn.btn-primary(type='button') Edit
                .row
                  .col-md-6.ml-auto.mr-auto.profiles.p-3.my-4.rounded.text-center.shadow-sm
                    .avatars
                      img.avatar-lg.rounded-circle.img-fluid(src="https://cms-assets.tutsplus.com/uploads/users/107/posts/26101/image/44-x-men-avatars-rogue.jpg")
                    .names
                      h3.title #{user.name}
                      p Email: #{user.email}
                      p User ID: #{user._id}
