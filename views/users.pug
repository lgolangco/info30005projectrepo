extends layout

block content
    .main.container
        .row
            .col-md-8.col-md-offset-2
                h1 Users
                table
                    tr
                        th Name
                        th Email
                        th ID

                    each user in users
                        tr
                            td
                                a(href="/user/" + user._id) #{user.name}
                            td #{user.email}
                            td #{user._id}


                a.btn.btn-info-outline.btn-lg.m-t-1(href="/register") Get Started!